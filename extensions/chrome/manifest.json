{
    "manifest_version": 2,

    "name": "User Interface Review",
    "description": "Add UI references with style",
    "version": "1.1",

    "permissions": [
        "tabs",
        "activeTab",
        "tabCapture",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "128": "icon.png"
    },

    "background": {
        "scripts": ["js/screenshot.js"]
    }
}
