<%= simple_form_for ref do |f| %>
  <div class="row">
    <div class="col-md-5">
      <%= f.input :image %>
      <%= f.input :video %>
    </div>
    <div class="col-md-6 offset-md-1">
      <%= f.input :title %>
      <%= f.input :url %>
      <%= f.input :description %>
      <%= f.input :keywords %>
      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
