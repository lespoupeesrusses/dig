<div class="row">
  <% @refs.each do |ref| %>
    <div class="col-md-3 mb-5">
      <div class="thumb">
        <% if ref.video.attached? && ref.video.previewable? %>
          <%= image_tag ref.video.preview(resize: '512'), class: 'img-fluid' %>
        <% elsif ref.video.attached? %>
          <%= video_tag url_for(ref.video), class: 'img-fluid' %>
        <% elsif ref.image.attached? %>
          <%= image_tag ref.image.variant(resize: '512'), class: 'img-fluid' %>
        <% end %>
      </div>
      <div class="data">
        <p><%= ref.title %></p>
        <%= link_to 'View', ref %><br/>
        <%= link_to 'Browse', ref.url, target: :_blank unless ref.url.nil? %>
        <% unless ref.keywords.blank? %><p><%= ref.keywords %></p><% end %>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @refs %>
