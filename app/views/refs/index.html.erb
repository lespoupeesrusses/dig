<div class="row">
  <% @refs.each do |ref| %>
    <div class="col-md-3 ref">
      <%= link_to ref do %>
        <%= image_tag ref.image.variant(resize: "512"), class: 'img-fluid' if ref.image.attached? %>
        <%= video_tag url_for(ref.video), class: 'img-fluid' if ref.video.attached? %>
          <div class="data">
            <p><%= ref.title %></p>
            <%= link_to 'Site', ref.url, class: 'btn btn-light btn-sm', target: :_blank unless ref.url.nil? %>
            <% unless ref.keywords.blank? %><p><%= ref.keywords %></p><% end %>
          </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= paginate @refs %>
